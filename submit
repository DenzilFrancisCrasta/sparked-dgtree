#!/bin/bash

DATASET_FILE=datasets/paper_dataset.txt
QUERY_FILE=datasets/queries/paper_query.txt
SAVE_PATH=/tmp
RENDER_ENGINE=dot

# remove previously created serialized levels of the DGTree
rm -rf /tmp/level_*

rm images/*

# build the dgtree
time spark-submit --master local[8] \
                  --jars lib/Graphviz4S-1.0-SNAPSHOT.jar \
                  --class com.dgtree.DGTreeApp \
                  --executor-memory 6g \
                  --driver-memory 6g \
                  target/scala-2.11/sparked-dgtree_2.11-1.0.jar \
                  $DATASET_FILE \
                  $SAVE_PATH \
                  $QUERY_FILE \
                  $RENDER_ENGINE

